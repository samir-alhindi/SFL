
import "lib\\std.sfl"

-- opperations :: [Pair String (Number -> Number -> Number)]
opperations = [
    Pair "+" (\ x y -> x + y),
    Pair "-" (\ x y -> x - y),
    Pair "*" (\ x y -> x * y),
    Pair "/" (\ x y -> x / y)
];

-- calculate :: Number -> Number -> String -> Either String Number
calc n1 n2 opp = (find opp opperations) >>= (\ func -> Right (func n1 n2));