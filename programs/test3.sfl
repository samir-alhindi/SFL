

factorial = \ n -> if n <= 1
    then 1
    else n * factorial (n-1);

product = \ x y z ->
    let n = x * y
        in n * z;

traingle_area = \ base height ->
    let half_base = base * 0.5
    in half_base * height;

nested = \ x ->
    let y = x * 2 in
    let z = y + 1 in
    z + 7;

